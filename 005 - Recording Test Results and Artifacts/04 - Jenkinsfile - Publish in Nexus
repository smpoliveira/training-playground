pipeline {
    agent { 
		docker { 
			image 'maven:3.3.3' 
			args '--network training-playground'
			
		}
	}
    stages {
        stage('build') {
            steps {
                configFileProvider([configFile(fileId: "settings.xml", targetLocation: 'settings-copy.xml')]) {
		sh "mvn clean install \
			-f '005 - Recording Test Results and Artifacts/04 - Publish in Nexus' \
			-s settings-copy.xml"
            }
        }

    }
}
}
