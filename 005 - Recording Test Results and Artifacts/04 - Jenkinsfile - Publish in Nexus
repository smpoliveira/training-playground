pipeline {
    agent { 
		docker { 
			image 'maven:3.3.3' 
			args '--network training-playground'
			
		}
	}
    stages {
        stage('build') {
            steps {
                configfileProvider([configfile(fileId: "settings.xml", targetLocation: 'settings-copy.xml')}) {
		sh "mvn clean install \
			-f '005 - Recording Test Results and Artifacts/04 - Jenkinsfile - Publish in Nexus' \
			-s 'settings-copy.xml'"
            }
        }

    }
}
