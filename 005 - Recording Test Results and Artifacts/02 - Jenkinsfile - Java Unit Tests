pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('tests') {
            steps {
	    
	        configfileProvider([configFile(fileId: "settings.xml", targetLocation: 'settings-copy.xml')]) {	
                sh "mvn install -f '005 - Recording Test Results and Artifacts/02 - Java Unit Tests' -s settings-copy.xml"
		}
            }
        }
    }
}
