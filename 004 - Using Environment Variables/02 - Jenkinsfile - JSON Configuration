pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	
    environment {
		BUILD_CONFIGS = '''
		[
			{
			name: "echo command",
			command: "echo 'Hello'"
			}, {
			name: "current path",
			command: "pwd"
			}
		]
		'''
    }
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON text: $BUILD_CONFIGS
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
