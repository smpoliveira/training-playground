pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
 post { 
        success { 
            echo 'success!'
	    }
	    
	failure {
		echo 'failure!'
		}
		
	always {
		echo 'finished!'
		}
		}
	

}
